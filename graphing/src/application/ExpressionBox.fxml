<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ExpressionBoxController">
	<children>
		<Canvas fx:id="visibleCanvas" height="30.0" width="30.0">
			<HBox.margin>
				<Insets left="5.0" />
			</HBox.margin>
		</Canvas>
		<Region HBox.hgrow="ALWAYS" />
		<TextField fx:id="inputTxt">
			<HBox.margin>
				<Insets left="5.0" right="5.0" />
			</HBox.margin>
		</TextField>
		<Region />
		<Button fx:id="removeBtn" mnemonicParsing="false" text="X">
			<HBox.margin>
				<Insets left="5.0" right="5.0" />
			</HBox.margin>
		</Button>
	</children>
	<padding>
		<Insets bottom="10.0" top="10.0" />
	</padding>
</HBox>
